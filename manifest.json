{
  "manifest_version": 3,
  "name": "Twitter Code snippet",
  "version": "1.1",
  "description": "Replaces code snippet with code blocks",
  "permissions": [],
  "icons": {
    "48": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://www.twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
